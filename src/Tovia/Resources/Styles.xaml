<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="OutlookSecondaryButtonStyle"
           TargetType="Button"
           BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Foreground"
                Value="{DynamicResource OutlookButtonForeground}" />
        <Setter Property="Background"
                Value="{DynamicResource OutlookButtonBackground}" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="BorderBrush"
                Value="{DynamicResource OutlookButtonBorder}" />
        <Setter Property="Padding"
                Value="10,5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"
                                          RecognizesAccessKey="True" />
                    </Border>
                    <ControlTemplate.Triggers> 
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="{DynamicResource OutlookButtonHover}" />
                        </Trigger>
                        <Trigger Property="IsPressed"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="{DynamicResource OutlookButtonEnabled}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Background"
                                    Value="{DynamicResource OutlookButtonBackgroundDisabled}" />
                            <Setter Property="Foreground"
                                    Value="{DynamicResource OutlookButtonForegroundDisabled}" />
                            <Setter Property="BorderBrush"
                                    Value="{DynamicResource OutlookButtonBorderDisabled}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="OutlookTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
        <Setter Property="Padding" Value="6,4"/>
    </Style>
    <Style x:Key="OutlookComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
    </Style>
    <Style x:Key="OutlookCheckBoxStyle" TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
    </Style>
    <Style x:Key="OutlookDatePickerStyle" TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
    </Style>
    <Style x:Key="SettingsHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>
    <Style x:Key="TitleTextStyle"
           TargetType="TextBlock">
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}"
                         Value="Complete">
                <Setter Property="Foreground"
                        Value="#201F1E" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status}"
                         Value="InProgress">
                <Setter Property="Foreground"
                        Value="#201F1E" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status}"
                         Value="Failed">
                <Setter Property="Foreground"
                        Value="LightGray" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="DescriptionTextStyle"
           TargetType="TextBlock">

        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}"
                         Value="Complete">
                <Setter Property="Foreground"
                        Value="#605E5C	" />
                <Setter Property="FontStyle"
                        Value="Italic" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status}"
                         Value="InProgress">
                <Setter Property="Foreground"
                        Value="#605E5C" />
                <Setter Property="FontStyle"
                        Value="Italic" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status}"
                         Value="Failed">
                <Setter Property="Foreground"
                        Value="LightGray" />
                <Setter Property="FontStyle"
                        Value="Italic" />
            </DataTrigger>
        </Style.Triggers>


    </Style>
    <Style x:Key="TaskPriorityStyle"
           TargetType="TextBlock">
        <Setter Property="FontWeight"
                Value="SemiBold" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status}" Value="Failed">
                <Setter Property="Foreground"
                        Value="LightGray" />

            </DataTrigger>
            <DataTrigger Binding="{Binding Status}"
                         Value="InProgress">
                <Setter Property="Foreground"
                        Value="Black" />

            </DataTrigger>
            <DataTrigger Binding="{Binding Status}"
                         Value="Complete">
                <Setter Property="Foreground"
                        Value="Black" />

            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TaskBackground"
           TargetType="DataGridRow">
        <Setter Property="BorderBrush"
                Value="{DynamicResource MaterialDesignPaper}" />
        <Setter Property="BorderThickness"
                Value="0,0,0,1" />
        <Setter Property="Background"
                Value="{Binding DataContext.ToDoListVM.InProgressTaskColor, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
        <Setter Property="Focusable"
                Value="False" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="Complete">
                <Setter Property="Background"
                        Value="{Binding DataContext.ToDoListVM.CompletedTaskColor, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="InProgress">
                <Setter Property="Background"
                        Value="{Binding DataContext.ToDoListVM.InProgressTaskColor, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="Failed">
                <Setter Property="Background"
                        Value="{Binding DataContext.ToDoListVM.FailedTaskColor, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                <Setter Property="Opacity"
                        Value="0.8" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TaskBackgroundOverlay"
           TargetType="Border">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="Complete">
                <Setter Property="Background"
                        Value="{Binding DataContext.CompletedTaskColor, 
   RelativeSource={RelativeSource AncestorType=Window}}" />
                <Setter Property="Opacity"
                        Value="0.9" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="InProgress">
                <Setter Property="Background"
                        Value="{Binding DataContext.InProgressTaskColor, 
   RelativeSource={RelativeSource AncestorType=Window}}" />
                <Setter Property="Opacity"
                        Value="0.9" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="Failed">
                <Setter Property="Background"
                        Value="{Binding DataContext.FailedTaskColor, 
   RelativeSource={RelativeSource AncestorType=Window}}" />
                <Setter Property="IsEnabled"
                        Value="False" />
                <Setter Property="Opacity"
                        Value="0.9" />

            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TaskPriorityColor"
           TargetType="Ellipse">
        <Style.Triggers>
            <DataTrigger Binding="{Binding Importance}"
                         Value="high">
                <Setter Property="Fill"
                        Value="Red" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Importance}"
                         Value="normal">
                <Setter Property="Fill"
                        Value="orange" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Importance}"
                         Value="low">
                <Setter Property="Fill"
                        Value="green" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="IconButtonStyle"
           TargetType="Button"
           BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background"
                Value="Transparent" />
        <Setter Property="Foreground"
                Value="WhiteSmoke" />
        <Setter Property="Height"
                Value="24" />
        <Setter Property="Width"
                Value="24" />
        <Setter Property="Padding"
                Value="0" />
        <Setter Property="Margin"
                Value="0 0 0 0" />
        <Style.Triggers>
            <Trigger Property="IsEnabled"
                     Value="False">
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="Opacity"
                        Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="OutlookBorderStyle"
           TargetType="Border">
        <Setter Property="RenderTransformOrigin"
                Value="0.5,0.5" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1.0"
                                ScaleY="1.0" />
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!--On Enter-->
            <EventTrigger RoutedEvent="MouseEnter">
                <BeginStoryboard Name="MouseEnterStoryboard">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                         To="1.02"
                                         Duration="0:0:0.15">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                         To="1.02"
                                         Duration="0:0:0.15">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

            <!-- On leave -->
            <EventTrigger RoutedEvent="MouseLeave">
                <BeginStoryboard Name="MouseLeaveStoryboard">
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleX)"
                                         To="1.0"
                                         Duration="0:0:0.15">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(ScaleTransform.ScaleY)"
                                         To="1.0"
                                         Duration="0:0:0.15">
                            <DoubleAnimation.EasingFunction>
                                <CubicEase EasingMode="EaseOut" />
                            </DoubleAnimation.EasingFunction>
                        </DoubleAnimation>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>

            
            <!--Task Background Color-->
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="Complete">
                <Setter Property="Background"
                        Value="{Binding DataContext.ToDoListVM.CompletedTaskColor, RelativeSource={RelativeSource AncestorType=Border}}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="InProgress">
                <Setter Property="Background"
                        Value="{Binding DataContext.ToDoListVM.InProgressTaskColor, RelativeSource={RelativeSource AncestorType=Border}}" />
            </DataTrigger>
            <DataTrigger Binding="{Binding Status, Mode=OneWay}"
                         Value="Failed">
                <Setter Property="Background"
                        Value="{Binding DataContext.ToDoListVM.FailedTaskColor, RelativeSource={RelativeSource AncestorType=Border}}" />
                <Setter Property="Opacity"
                        Value="0.8" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>