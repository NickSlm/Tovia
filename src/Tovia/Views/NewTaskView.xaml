<UserControl x:Class="Tovia.Views.NewTaskView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tovia.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">



    <Border Width="380"
            BorderThickness="1"
            BorderBrush="White"
            CornerRadius="0"
            SnapsToDevicePixels="True"
            UseLayoutRounding="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border 
                    Padding="16"
                    Background="{DynamicResource OutlookHeaderBackgroundBrush}"
                    BorderBrush="#E1E1E1"
                    BorderThickness="0,0,0,1">
                <TextBlock Text="New Task"
                           FontSize="16"
                           Foreground="{DynamicResource OutlookHeaderForegroundBrush}"
                           FontWeight="SemiBold"/>
            </Border>

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16">

                    <!-- Title -->
                    <TextBox Text="{Binding TaskTitle}"
                             materialDesign:HintAssist.Hint="Title"
                             
                             Style="{StaticResource OutlookTextBoxStyle}"
                             Margin="0,0,0,12" />

                    <!-- Description -->
                    <TextBox Text="{Binding TaskDescription}"
                             materialDesign:HintAssist.Hint="Description (optional)"
                             MaxLength="256"
                             Height="100"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Style="{StaticResource OutlookTextBoxStyle}"
                             Margin="0,0,0,12" />

                    <!-- Due date & Priority -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <DatePicker Grid.Column="0"
                                    SelectedDate="{Binding TaskDueDate, Mode=TwoWay}"
                                    DisplayDateStart="{x:Static sys:DateTime.Today}"
                                    Style="{StaticResource OutlookDatePickerStyle}"
                                    Margin="0,0,8,0" />

                        <ComboBox Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Priority"
                                  SelectedValue="{Binding TaskImportance, Mode=TwoWay}"
                                  SelectedValuePath="Content"
                                  Style="{StaticResource OutlookComboBoxStyle}">
                            <ComboBoxItem Content="high" />
                            <ComboBoxItem Content="normal" />
                            <ComboBoxItem Content="low" />
                        </ComboBox>
                    </Grid>

                    <!-- Calendar Event -->
                    <Separator Margin="0,0,0,12" />
                    <CheckBox Content="Add to Calendar"
                              IsChecked="{Binding EventIsChecked}"
                              IsEnabled="{Binding AuthorizationVM.EventIsEnabled}"
                              Style="{StaticResource OutlookCheckBoxStyle}" />

                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Padding="12"
                    BorderBrush="#E1E1E1"
                    Background="{DynamicResource OutlookHeaderBackgroundBrush}"
                    BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="SAVE"
                            IsDefault="True"
                            Width="88"
                            Margin="8 0 8 0"
                            Style="{DynamicResource OutlookSecondaryButtonStyle}"
                            Command="{Binding SaveTaskCommand}">
                    </Button>

                    <Button Content="CANCEL"
                            Margin="8 0 8 0"
                            Width="88"
                            IsCancel="True"
                            Style="{DynamicResource OutlookSecondaryButtonStyle}"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
