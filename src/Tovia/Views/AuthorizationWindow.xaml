<Window x:Class="Tovia.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Tovia.Views"
        mc:Ignorable="d"
        Height="400"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="Segoe UI">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#F3F6FB"
                          Offset="0" />
            <GradientStop Color="#E7EDF9"
                          Offset="1" />
        </LinearGradientBrush>
    </Window.Background>


    <Border BorderBrush="Black"
            BorderThickness="1"
            Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Background="#0078D4"
                  Height="60">
                <TextBlock Text="Authentication"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0" />
                <Button Width="35"
                        Height="35"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Padding="0"
                        Margin="15 0 8 0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Content="X"
                        Command="{Binding CloseCommand}" />
            </Grid>

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20">
                <Image Source="pack://application:,,,/Assets/Icons/Tovia_Logo.png"
                       Width="200"
                       Height="126"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="0 20 0 20" />

                <TextBlock Text="Welcome! Sign in with your Microsoft account."
                           FontSize="14"
                           Foreground="#555"
                           TextAlignment="Center"
                           Margin="0 0 0 20" />
                
                <Button Command="{Binding AuthorizationCommand}"
                        Style="{StaticResource MicrosoftButtonStyle}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="2">
                        <Image Source="pack://application:,,,/Assets/Icons/microsoftIcon.png"
                               Width="20"
                               Height="20"
                               Margin="0,0,6,0" />
                        <TextBlock Text="Sign in with Microsoft"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Command="{Binding SignInOfflineCommand}" Style="{StaticResource MicrosoftButtonStyle}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="CloudOffOutline"  Width="24" Height="24" Margin="0 0 6 0"/>
                        <TextBlock Text="Offline"  VerticalAlignment="Center"/>

                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
