<Window x:Class="Tovia.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tovia.Views"
        mc:Ignorable="d"
        Title="Login"
        Height="400"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="Segoe UI">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#F3F6FB"
                          Offset="0" />
            <GradientStop Color="#E7EDF9"
                          Offset="1" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Outlook style sign-in button -->
        <Style x:Key="MicrosoftButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="White" />
            <Setter Property="BorderBrush"
                    Value="#CCC" />
            <Setter Property="BorderThickness"
                    Value="1" />
            <Setter Property="Padding"
                    Value="12,8" />
            <Setter Property="Cursor"
                    Value="Hand" />
            <Setter Property="Margin"
                    Value="10" />
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="SemiBold" />
            <Setter Property="Foreground"
                    Value="#2F2F2F" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover effect -->
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#F5F5F5" />
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#999" />

                            </Trigger>
                            <!-- Pressed effect -->
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E5E5E5" />
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#666" />
                                <Setter TargetName="border"
                                        Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="4"
                                                          ShadowDepth="1"
                                                          Opacity="0.2" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Disabled state -->
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#EEE" />
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#DDD" />
                                <Setter Property="Foreground"
                                        Value="#AAA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border BorderBrush="Black"
            BorderThickness="1"
            Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top Blue Header -->
            <Grid Background="#0078D4"
                  Height="60">
                <TextBlock Text="Authentication"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="15,0,0,0" />
                <Button Width="35"
                        Height="35"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Padding="0"
                        Margin="15 0 8 0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Bold"
                        Content="✖"
                        Command="{Binding CloseCommand}" />
            </Grid>

            <!-- Content -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20">
                <!-- Microsoft Logo -->
                <Image Source="pack://application:,,,/Assets/Icons/Tovia_Logo.png"
                       Width="200"
                       Height="126"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="0,20,0,20" />

                <!-- Welcome Text -->
                <TextBlock Text="Welcome! Sign in with your Microsoft account."
                           FontSize="14"
                           Foreground="#555"
                           TextAlignment="Center"
                           Margin="0,0,0,20" />

                <!-- Sign in Button -->
                <Button Command="{Binding AuthorizationCommand}"
                        Style="{StaticResource MicrosoftButtonStyle}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="2">
                        <Image Source="pack://application:,,,/Assets/Icons/microsoftIcon.png"
                               Width="20"
                               Height="20"
                               Margin="0,0,6,0" />
                        <TextBlock Text="Sign in with Microsoft"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
