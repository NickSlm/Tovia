<Window x:Class="Tovia.Views.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Tovia.Views"
        mc:Ignorable="d"
        Height="400"
        Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        FontFamily="Segoe UI">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="1,1">
            <GradientStop Color="#F3F6FB"
                          Offset="0" />
            <GradientStop Color="#E7EDF9"
                          Offset="1" />
        </LinearGradientBrush>
    </Window.Background>


    <materialDesign:DialogHost IsOpen="{Binding IsSyncing}"
                               CloseOnClickAway="False">
        <materialDesign:DialogHost.DialogContent>
            <StackPanel Margin="24">
                <ProgressBar IsIndeterminate="True" />
                <TextBlock Text="Syncing data..." />
            </StackPanel>
        </materialDesign:DialogHost.DialogContent>

    <Border BorderBrush="Black"
            BorderThickness="1"
            Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Background="#0078D4"
                  Height="60">
                <TextBlock Text="Authentication"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="15 0 0 0" />

                    <Button Width="40"
                            Height="32"
                            HorizontalAlignment="Right"
                            Margin="0 0 15 0"
                            Click="Close_Click"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8BB;"
                            Style="{StaticResource IconButtonStyle}" />
                </Grid>

            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="20">
                <Image Source="pack://application:,,,/Assets/Icons/Tovia_Logo.png"
                       Width="200"
                       Height="126"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Margin="0 20 0 20" />

                <TextBlock Text="Welcome! Sign in to continue."
                           FontSize="14"
                           Foreground="#555"
                           TextAlignment="Center"
                           Margin="0 0 0 20" />
                
                <Button Command="{Binding AuthorizationCommand}"
                            Style="{StaticResource AuthButton}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                >
                        <Image Source="pack://application:,,,/Assets/Icons/microsoftIcon.png"
                               Width="24"
                               Height="24"
                               Margin="10 0 10 0"/>
                        <TextBlock Text="Sign in with Microsoft"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
                    <Button Command="{Binding GoogleAuthCommand}" Style="{StaticResource AuthButton}">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Image Source="/Assets/Icons/web_light_rd_na@1x.png" 
                                   Width="24" 
                                   Height="24" 
                                   Margin="10 0 10 0"
                                   />
                            <TextBlock Text="Sign in with Google"
                                       VerticalAlignment="Center" />
                        </StackPanel>

                    </Button>
            </StackPanel>
        </Grid>
    </Border>
    </materialDesign:DialogHost>

</Window>
