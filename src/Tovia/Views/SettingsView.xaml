<UserControl x:Class="Tovia.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tovia.Views"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="554"
             d:DesignWidth="491">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily"
                    Value="Segoe UI" />
            <Setter Property="FontSize"
                    Value="13" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Foreground"
                    Value="{DynamicResource MaterialDesignBody}" />
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Background"
                    Value="{DynamicResource MaterialDesignDivider}" />
            <Setter Property="Height"
                    Value="1" />
            <Setter Property="Margin"
                    Value="0,8" />
        </Style>
    </UserControl.Resources>

    <Border Width="384"
            Height="544"
            BorderThickness="1"
            BorderBrush="White"
            CornerRadius="0"
            SnapsToDevicePixels="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border 
                    Padding="16,12"
                    Background="{DynamicResource OutlookHeaderBackgroundBrush}">
                <TextBlock Text="Settings"
                           FontFamily="Segoe UI"
                           Foreground="{DynamicResource OutlookHeaderForegroundBrush}"
                           FontSize="18"
                           FontWeight="SemiBold"/>
            </Border>

            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="16">

                    <Expander Header="Appearance"
                              IsExpanded="True"
                              Style="{StaticResource MaterialDesignExpander}"
                              Margin="0,0,0,16">
                        <StackPanel>
                            <Separator Margin="0,4,0,8"
                                       Background="#E1E1E1"
                                       Height="1" />

                            <StackPanel Margin="8">
                                <!-- Theme Toggle -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="160" />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Theme:"
                                           Grid.Column="0"
                                           VerticalAlignment="Center" />
                                    <StackPanel Grid.Column="1"
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="WeatherSunny"
                                                                 Width="20"
                                                                 Height="20"
                                                                 Margin="0,0,8,0" />
                                        <ToggleButton Width="50"
                                                      Height="24"
                                                      ToolTip="Light/Dark"
                                                      Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                      Command="{Binding UpdateThemeCommand}"
                                                      IsChecked="{Binding IsDarkTheme}" />
                                        <materialDesign:PackIcon Kind="WeatherNight"
                                                                 Width="20"
                                                                 Height="20"
                                                                 Margin="8,0,0,0" />
                                    </StackPanel>
                                </Grid>

                                <!-- Task Colors -->
                                <Grid Margin="0,8,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Task In Progress"
                                           Grid.Column="0" />
                                    <xctk:ColorPicker Grid.Column="1"
                                                      DisplayColorAndName="True"
                                                      SelectedColor="{Binding InProgressTaskColor}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Task Failed"
                                           Grid.Column="0" />
                                    <xctk:ColorPicker Grid.Column="1"
                                                      DisplayColorAndName="True"
                                                      SelectedColor="{Binding FailedTaskColor}" />
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Label Content="Task Complete"
                                           Grid.Column="0" />
                                    <xctk:ColorPicker Grid.Column="1"
                                                      DisplayColorAndName="True"
                                                      SelectedColor="{Binding CompletedTaskColor}" />
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Hotkeys -->
                    <Expander Header="Hotkeys"
                              Style="{StaticResource MaterialDesignExpander}"
                              Margin="0,0,0,16">
                        <StackPanel>
                            <Separator Margin="0,4,0,8"
                                       Background="#E1E1E1"
                                       Height="1" />

                        <StackPanel Margin="8">
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="160" />
                                </Grid.ColumnDefinitions>
                                <Label Content="Toggle overlay:"
                                       Grid.Column="0"
                                       VerticalAlignment="Center" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding _keyStrokes[Overlay].keyStroke}"
                                         Tag="Overlay"
                                         PreviewKeyDown="KeyBind_PreviewKeyDown"
                                         IsReadOnly="True"
                                         Cursor="Hand"
                                         Style="{StaticResource OutlookTextBoxStyle}" />
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="160" />
                                </Grid.ColumnDefinitions>
                                <Label Content="Create new task:"
                                       Grid.Column="0"
                                       VerticalAlignment="Center" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding _keyStrokes[NewTask].keyStroke}"
                                         Tag="NewTask"
                                         PreviewKeyDown="KeyBind_PreviewKeyDown"
                                         IsReadOnly="True"
                                         Cursor="Hand"
                                         Style="{StaticResource OutlookTextBoxStyle}" />
                            </Grid>
                        </StackPanel>
                        </StackPanel>
                    </Expander>

                    <!-- Overlay -->
                    <Expander Header="Overlay"
                              Style="{StaticResource MaterialDesignExpander}">
                        <StackPanel>
                            <Separator Margin="0,4,0,8"
                                       Background="#E1E1E1"
                                       Height="1" />
                            <StackPanel Margin="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="160" />
                                </Grid.ColumnDefinitions>
                                <Label Content="Overlay position:"
                                       VerticalAlignment="Center" />
                                <ComboBox Grid.Column="1"
                                          ItemsSource="{Binding PositionOptions}"
                                          SelectedItem="{Binding OverlayPos, Mode=TwoWay}"
                                          Style="{StaticResource OutlookComboBoxStyle}" />
                            </Grid>
                        </StackPanel>

                        </StackPanel>
                    </Expander>

                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="2"
                    Background="{DynamicResource OutlookHeaderBackgroundBrush}"
                    Padding="12">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="SAVE"
                            IsDefault="True"
                            Margin="8,0"
                            Width="88"
                            Style="{DynamicResource OutlookSecondaryButtonStyle}"
                            Command="{Binding SaveSettingsCommand}" />
                    <Button Content="CANCEL"
                            IsCancel="True"
                            Margin="8,0"
                            Width="88"
                            Style="{DynamicResource OutlookSecondaryButtonStyle}"
                            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</UserControl>
